.profile{
    display: flex;
    min-height: 100vh;

    &__navigate__buttons {
        display: flex;
        width: 64px;
        background-color: #fbfbfb;
        border-right: 1px solid #eaeaea;
    }

    &__navigate__button {
        display: flex;
        flex: 1;
        justify-content: center;
        align-items: center;
        border: 0;
        background-color: transparent;
        color: var(--main-color);
    }

    &__container {
        display: flex;
        min-width: 1280px;
        width: 95vw;
        padding-top: 60px;
    }

    &__content {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: auto 0;
        flex: 1;
        gap: 60px;
    }

    &__icon {
        color: #efefef;
    }

    &__icon:hover {
        color:black;
    }

    &__header {
        display: flex;
        flex-direction: column;
        align-items: center;

        &__button {
            border: 0;
            width: 130px;
            height: 130px;
            background-size: cover;
            border-radius: 50%;
        }

        &__button:hover {
            opacity: 0.8;
        }

        &__button:active {
            opacity: 0.95;
        }
    }

    &__information {
        display: flex;
        flex-direction: column;
        min-width: 510px;
        gap: 10px;

        &__items {
            display: flex;
            justify-content: space-between;
            border-bottom: 1px solid #eaeaea;
            font-style: normal;
            font-weight: 500;
            font-size: 13px;
            line-height: 13px;
            padding-bottom: 10px;
        }

        &__title {
            margin: 0;
            color: #1e1e1e;
        }

        &__error {
            display: block;
            margin-bottom: -16px;
            font-style: normal;
            font-weight: 400;
            font-size: 8px;
            line-height: 8px;
            color: #ff2f2f;
        }

        &__value {
            margin: 0;
            color: #999;

            &-edit {
                flex: 1;
                border: 0;
                padding: 0;
                margin: -2px 0;
                text-align: end;
                outline: 0;
                font-weight: 500;
                color: #999;
                font-size: 13px;
            }
        }
    }


    &__buttons {
        display: flex;
        flex-direction: column;
        justify-content: start;
        min-width: 510px;
        min-height: 70px;
        gap: 10px;

        &__container {
            border-bottom: 1px solid #eaeaea;
        }

        &__button {
            min-width: 208px;
        }
    }

    &__button {
        font-style: normal;
        font-weight: 500;
        font-size: 13px;
        line-height: 13px;
        color: var(--main-color);
        border: 0;
        background-color: #fff;
        padding: 0 0 10px;
    }

    &__button-red {
        color: #f00;
        border-bottom: 0;
    }
}





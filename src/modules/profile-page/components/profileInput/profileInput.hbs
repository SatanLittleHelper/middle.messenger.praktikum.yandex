<div class="profile__information__items">
    <label for="{{name}}" class="profile__information__title">{{text}}</label>
    <input name="{{name}}" id="{{name}}" type="{{type}}" class="profile__information__value-edit" value="{{value}}">
    {{#if error}}
        <p class="profile__information__error">{{error}}</p>
    {{/if}}
</div>

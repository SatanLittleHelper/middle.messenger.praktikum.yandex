.messenger {
    &__container {
        display: flex;
        width: 100vw;

    }

    &__main-container {
        display: flex;
        flex-direction: column;
        width: 100%;

        &__header {
            position: relative;
            display: flex;
            height: 54px;
            padding: 10px;
            justify-content: space-between;
            align-items: center;

            &__wrapper {
                display: flex;
                align-items: center;
                gap: 10px
            }

            &__icon {
                width: 37px;
                height: 37px;
                border-radius: 50%;
            }

            &__title {
                font-style: normal;
                font-weight: 600;
                font-size: 13px;
                line-height: 13px;
                color: #1e1e1e;
            }

            &__menu {
                height: 100%;
                width: 33px;
                padding: 10px;
                border: 0;
                background-color: transparent;

                &__wrapper {
                    margin: auto;
                    display: flex;
                    align-items: center;
                    width: 5px;
                    height: 33px;
                    pointer-events: none;

                }

                &__item {
                    position: relative;
                    border: solid 4px #1e1e1e;
                    border-radius: 50%;
                    background-color: #1e1e1e ;


                }

                &__item::before, &__item::after {
                    content: "";
                    position: absolute;
                    left: -4px;
                    border: solid 4px #1e1e1e;
                    border-radius: 50%;
                    background-color: #1e1e1e ;
                }

                &__item::before {
                    top: 8px
                }

                &__item::after {
                    bottom: 8px;
                }
            }

        }

        &__header::after {
            content: "";
            position: absolute;
            bottom: 1px;
            height: 1px;
            width: calc(100% - 20px);
            margin-bottom: -1px;
            background-color:  var(--second-color);
        }

        &__content {
            display: flex;
            height: calc(100vh - 196px);
            flex-direction: column-reverse;
            padding-top: 48px;
            overflow-y: auto;
        }

        &__content-notActive {
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: calc(100vh - 196px);
            margin: auto;
            font-style: normal;
            font-weight: 500;
            font-size: 14px;
            line-height: 14px;
            color: var(--second-color);

        }

        .message {
            &-date {
                align-self: center;
                font-style: normal;
                font-weight: 500;
                font-size: 12px;
                line-height: 12px;
                color: var(--second-color);
            }

            &-container {
                display: flex;
                max-width: 40%;
                margin: 30px 20px 10px;
                padding: 11px;
                background-color: #f8f8f8;
                border-radius: 10px;

                &__content {
                    font-style: normal;
                    font-weight: 500;
                    font-size: 12px;
                    line-height: 15px;
                    color: #1e1e1e;
                }

                &__time, &-delivered, &-read {
                    align-self: end;
                    margin-left: 5px;
                    font-style: normal;
                    font-weight: 500;
                    font-size: 9px;
                    line-height: 9px;
                    color: var(--second-color);
                }

                &-read {
                    margin: 0 -3px 0 -5px;

                }

                &__time-send-by-you, &-delivered, &-read {
                color: var(--main-color);
                }
            }

            &-send-by-you {
                align-self: end;
                background-color: #e4edfd;
            }
        }


        &__footer {
            position: relative;
            display: flex;
            height: 54px;
            padding: 10px;
            justify-content: space-between;
            align-items: center;
            gap: 14px;

            &__icon {
                color: var(--main-color);
            }

            &__input {
                padding-left: 20px;
                height: 32px;
                flex: 1;
                border: 0;
                border-radius: 30px;
                background-color: #efefef;
                font-style: normal;
                font-weight: 500;
                font-size: 12px;
                line-height: 12px;
                color: #1e1e1e;
            }

            &__input::placeholder {
                color: var(--second-color);
            }

            &__submit {
                transform: rotate(180deg);

                &__button {
                    border: 0;
                    background-color: transparent;
                    color: var(--main-color);

                }
            }

            &__popup {
                display: flex;
                position: absolute;
                bottom: 80px;
                left: 10px;
            }
        }

        &__footer::before {
            content: "";
            position: absolute;
            top: 1px;
            height: 1px;
            width: calc(100% - 20px);
            margin-bottom: -1px;
            background-color:  var(--second-color);
        }

    }

}

.dialog-sidebar {
    display: flex;
    flex-direction: column;
    width: 310px;
    height: 100vh;
    background-color: #fbfbfb;
    border-right: solid 1px #eaeaea;

    &__nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 8px;
        margin-top: 21px;
        padding: 0 10px;

        &__title {
            display: flex;
            font-style: normal;
            font-weight: 500;
            font-size: 12px;
            line-height: 12px;
            color: var(--second-color);
        }

        &__icon {
            width: 8px;
            height: 8px;
            align-self: center;
            border-left: 1px solid #999;
            border-top: 1px solid #999;
            transform: rotate(135deg);

        }

        &__button {
            border: 0;
            background-color: transparent;
        }
    }

    &__search {
        display: flex;
        margin-top: 23px;

        &__inputs-wrapper {
            width: 100%;
            position: relative;

        }

        &__input {
            width: calc(100% - 20px);
            height: 32px;
            margin: 0 10px ;
            border: 0;
            background-color: #efefef;
            border-radius: 5px;
            text-align: center;
        }

        &__input::placeholder {
            font-style: normal;
            font-weight: 500;
            font-size: 12px;
            line-height: 12px;
            color: var(--second-color);
        }

        &__icon {
            position: absolute;
            top: 9px;
            left: 105px ;
            color: var(--second-color);
        }
    }

    &__content {
        margin-top: 14px;
        overflow-y: scroll;
    }

    &__content-noDialogs {
        margin: auto;
        font-style: normal;
        font-weight: 500;
        font-size: 14px;
        line-height: 14px;
        color: var(--second-color);

        &__button {
            border: 0;
            padding: 0;
            background-color: transparent;
            font-style: normal;
            font-weight: 500;
            font-size: 14px;
            line-height: 14px;
            color: var(--second-color);
        }

        &__button:hover {
            opacity: 0.8;

        }
    }

    &__content::-webkit-scrollbar {
        width: 0;
    }
}

.dialog-preview {
    width: 310px;
    height: 67px;
    border: 0;
    background-color: transparent;
    padding: 0;

    &-active {
        background-color: #e4edfd;
    }

    &__container {
        position: relative;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        padding: 10px;
        gap: 10px;
    }

    &__container::after {
        content: "";
        position: absolute;
        bottom: 1px;
        height: 1px;
        width: 290px;
        margin-bottom: -1px;
        background-color:  var(--second-color);
    }

    &__icon {
        width: 47px;
        height: 47px;
        border-radius: 50%;
    }

    &__header, &__content {
        display: flex;
        width: 233px;
        justify-content: space-between;
    }

    &__header {
        max-height: 15px;
    }

    &__content {
        height: 30px;
        margin-top: 4px;
    }

    &__message {
        &_title {
            font-style: normal;
            font-weight: 600;
            font-size: 13px;
            line-height: 13px;
            color: #1e1e1e;
        }

        &_text {
            display: flex;
            font-style: normal;
            font-weight: 500;
            font-size: 12px;
            line-height: 15px;
            overflow: hidden;
            color: var(--second-color);

            &_by-you {
                color: #1e1e1e;
                margin-right: 4px;
            }
        }
    }


    &__time {
        font-style: normal;
        font-weight: 500;
        font-size: 9px;
        line-height: 13px;
        color: var(--second-color);

    }

    &__unread-count {
        display: flex;
        min-width: 18px;
        height: 18px;
        border: solid 1px var(--main-color);;
        border-radius: 50%;
        background-color: var(--main-color);
        justify-content: center;
        align-items: center;
        align-self: flex-end;
        font-style: normal;
        font-weight: 500;
        font-size: 11px;
        line-height: 12px;
        color: #fff;
    }

}

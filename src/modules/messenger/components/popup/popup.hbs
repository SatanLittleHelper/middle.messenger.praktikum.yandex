<div class="popup-click-handler">
    <div class="popup">
        <div class="popup__container">
            {{#each buttons}}
                <button name="{{name}}" class="popup__container__item">
                    <div class="popup__container__item__icon">
                        <img src="https://placehold.co/22x22" class="popup__container__item__icon">
                    </div>
                    <div class="popup__container__item__title">{{text}}</div>
                </button>
            {{/each}}
        </div>
    </div>
</div>

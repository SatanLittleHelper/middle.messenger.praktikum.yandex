
.button {
    align-self: center;
    text-decoration: none;
    text-align: center;
    cursor: pointer;

    &__main {
        font-size: 13px;
        line-height: 13px;
        color: #fff;
        padding: 12px 0;
        background: var(--main-color);
        border: 0 solid;
        border-radius: 8px;

    }

    &__sub {
        font-size: 11px;
        line-height: 11px;
        color: var(--main-color);
        background-color: #fff;
        border: none;
    }
}

.button:hover {
    opacity: 0.8;
}

.button:active {
    opacity: 0.95;
}

<div class="form__container">
        <div class="form__header">
            <h2 class="form__title"> {{ header }}</h2>
        </div>
    <form  name="{{formName}}" class="form__content">
        <div class="form__content__inputs">
         {{#each inputs}}
             {{{ this }}}
         {{/each}}
    </div>
        {{#if store.state.loginFormError}}
        <div class="form__auth-error">{{store.state.loginFormError}}</div>
        {{/if}}{{#if store.state.signupFormError}}
        <div class="form__auth-error">{{store.state.signupFormError}}</div>
        {{/if}}
        <div class="form__content__buttons">
            <button class="button button__main form__button">{{buttonsText.mainBtn}}</button>
            <a href="{{ links.sub }}" class="button button__sub form__button">{{buttonsText.subBtn}}</a>
        </div>
</form>
</div>
